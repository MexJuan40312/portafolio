{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".", // Asegúrate de que esto siga siendo la raíz del proyecto
    "paths": {
      "@/components/*": ["./app/components/*"],
      "@/types/*": ["./app/types/*"],
      // AGREGAR ESTA LÍNEA para el alias de @/lib
      "@/lib/*": ["./app/lib/*"] // Si 'lib' está dentro de 'app'
      // O si tu carpeta 'lib' está directamente en la raíz del proyecto (al mismo nivel que 'app'):
      // "@/lib/*": ["./lib/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}